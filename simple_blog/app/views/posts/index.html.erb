<div class="container mt-4">
  <h1 class="text-center text-primary">All Posts</h1>

  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4">
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post), class: "text-decoration-none" %></h5>
            <p class="text-muted">By: <%= post.user.email if post.user %></p>
            <p class="card-text"><%= truncate(post.content, length: 100) %></p>
            <a href="<%= post_path(post) %>" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to "New Post", new_post_path, class: "btn btn-success mt-3" %>
</div>